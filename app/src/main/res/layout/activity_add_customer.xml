<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCustomerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp">
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Store Management System"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#03045E"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:textAlignment="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#00D4B8"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Customer"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:textColor="#C30010"
        android:textSize="28dp"
        android:textStyle="bold"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#B9B0B0"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name*"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>
        
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name*"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yyy"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suburb: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etSuburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Suburb"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZIP: "
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F94449"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etZip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ZIP"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-48dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddRecord"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/primary"
            android:padding="12dp"
            android:text="Add"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/primary"
            app:cornerRadius="6dp"/>


    </LinearLayout>

</ScrollView>