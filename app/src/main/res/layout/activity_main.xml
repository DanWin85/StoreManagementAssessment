<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Store Management System"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#03045E"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#00D4B8"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Management"
        android:layout_marginTop="20dp"
        android:textColor="#C30010"
        android:textSize="28dp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Add Customer"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/primary"
        app:cornerRadius="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Manage Customer"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/primary"
        app:cornerRadius="6dp"/>






</LinearLayout>